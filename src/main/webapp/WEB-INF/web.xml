<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>co.sanju.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>jobs</servlet-name>
        <servlet-class>co.sanju.JobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jobs</servlet-name>
        <url-pattern>/jobs</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addCompany</servlet-name>
        <servlet-class>co.sanju.AddCompanyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCompany</servlet-name>
        <url-pattern>/addCompany</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>applyJob</servlet-name>
        <servlet-class>co.sanju.ApplyJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>applyJob</servlet-name>
        <url-pattern>/applyJob</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>appliedJobs</servlet-name>
        <servlet-class>co.sanju.AppliedJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appliedJobs</servlet-name>
        <url-pattern>/appliedJobs</url-pattern>
    </servlet-mapping>
</web-app>